.buttonStyle{
  border-radius: 50%;
  height: 130px;
  width: 130px;
  border: none;
  background-color: #da251b;
  text-align: center;
  font-size: 20px;
  color: white;
  line-height: 130px;
}

.instruction{
  float: left;
  font-size: 20px;
  margin-top: 20px;
  margin-left: 2.5vw;
  color: #da251b;
}

.tag{
  margin-left: 3vw;
  margin-top: 10px;
  width: 45.5vw;
  height: 45px;
  float: left;
  text-align: center;
  line-height: 45px;
  background-color: white;
  color: #da251b; 
  border-radius: 10px;
  border: 1px solid #da251b;
}

.chooseView{
  margin-top: 10px;
  float: left;
}

.tagSelected{
  margin-left: 3vw;
  margin-top: 10px;
  width: 45.5vw;
  height: 45px;
  float: left;
  text-align: center;
  line-height: 45px;
  background-color: #da251b;
  color: white; 
  border-radius: 10px;
  border: 1px solid white;
