.confirm{
  width: 94vw;
  height: 55px;
  margin-top: 30px;
  margin-left: 3vw;
  float: left;
  text-align: center;
  line-height: 55px;
  background-color: #da251b;
  color: white; 
  font-size: 22px;
}

.usermotto {
  margin-top: 180px;
  font-size: 20px;
  color:  #da251b;
}

.search{
  float: left;
